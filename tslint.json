{
    "extends": "tslint:recommended",
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "rulesDirectory": ["."],
    "rules": {
        "max-line-length": {
            "options": [120]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
        },
        "quotemark":false,
        "object-literal-sort-keys": false,
        "disable-next-line": true
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        }
    }
}